{
	"env": {
		"commonjs": true,
		"es2022": true,
		"node": true,
		"browser": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaVersion": 13
	},
	"rules": {
		"indent": [
			"error",
			"tab", {
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"no-var": "error",
		"default-case": "warn",
		"default-case-last": "error",
		"default-param-last": [
			"warn"
		],
		"dot-notation": "off",
		"eqeqeq": "warn",
		"no-empty-function": "error",
		"no-empty": [
			"error",
			{
				"allowEmptyCatch": true
			}
		],
		"no-eval": "error",
		"no-invalid-this": "error",
		"no-void": "error",
		"wrap-iife": [
			"error",
			"inside"
		],
		"yoda": "warn",
		"array-bracket-spacing": [
			"error",
			"always"
		],
		"array-element-newline": [
			"error",
			"consistent"
		],
		"block-spacing": "error",
		"brace-style": "error",
		"camelcase": "warn",
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"eol-last": [
			"error",
			"always"
		],
		"no-trailing-spaces": "error",
		"quote-props": [
			"error",
			"consistent"
		],
		"spaced-comment": "error",
		"prefer-const": "warn",
		"prefer-arrow-callback": "warn",
		"no-unused-vars": "off",
		"no-constant-condition": [
			"error",
			{
				"checkLoops": false
			}
		],
		"keyword-spacing": "error",
		"comma-spacing": "error",
		"key-spacing": "error"
	}
}
